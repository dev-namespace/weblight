{
    "name": "Remember Things",
    "version": "1.0",
    "description": "Spaced repetition to remember what you read.",
    "icons": {
        "128": "icon.png"
    },
    "permissions": ["activeTab"],
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["content-script.js"]
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2
}
